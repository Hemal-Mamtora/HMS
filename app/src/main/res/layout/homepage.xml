<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/cSignup"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:gravity="center_vertical|center"
        android:text="Calories burnt"
        android:background="@android:color/holo_blue_bright"
        />

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_weight="0.07"
        android:background="@android:color/holo_blue_dark"
        android:baselineAligned="false"
        android:gravity="center_vertical|center"
        android:text="0.0kmph" />
    />

    <Chronometer
        android:id="@+id/chronometer2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/btn_start"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_weight="0.07" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_weight="0.07"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center_vertical|center" />


    <TextView
        android:id="@+id/tv_steps"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/tv_distance"
        android:layout_toStartOf="@+id/tv_distance"
        android:layout_weight="0.11"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center_vertical|center" />



    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_pause"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Start Pedometer" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_stop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Pause" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:text="RESTART" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="23dp"
        android:text="Logout" />

    <Button
        android:id="@+id/bmi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chronometer2"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_bright"
        android:text="View BMI" />

</RelativeLayout>
